SRCS =	ft_atoll.c	get_next_line_bonus.c get_next_line_utils_bonus.c ft_lstmap.c ft_lstiter.c ft_lstclear.c ft_lstdelone.c ft_lstadd_back.c ft_lstlast.c \
		ft_lstsize.c ft_lstadd_front.c ft_lstnew.c ft_atoi.c ft_put_and_count.c ft_printf.c ft_putnbr_base_and_count.c ft_isascii.c	ft_memcmp.c	ft_putendl_fd.c	\
		ft_strdup.c	ft_strlen.c	ft_substr.c	ft_bzero.c	ft_isdigit.c	str_isdigit.c	ft_memcpy.c	ft_putnbr_fd.c	ft_striteri.c	ft_strmapi.c	ft_tolower.c	ft_calloc.c	ft_isprint.c	\
		ft_memmove.c	ft_putstr_fd.c	ft_strjoin.c	ft_strnstr.c	ft_toupper.c	ft_isalnum.c	ft_itoa.c	ft_memset.c	ft_split.c	ft_strlcat.c	ft_strrchr.c	\
		ft_isalpha.c	ft_memchr.c	ft_putchar_fd.c	ft_strchr.c	ft_strlcpy.c	ft_strtrim.c ft_strncmp.c ft_isalnum.c	str_isascii.c

OBJS = ${SRCS:.c=.o}

CC = cc

HEAD = libft.h

FLAGS = -Wall -Wextra -Werror

NAME = libft.a

LIB = ar rc

RM = rm -f

%.o: %.c  ${HEAD} Makefile get_next_line_bonus.h
	${CC} ${FLAGS} -c $< -o $@

all:	${NAME}

${NAME}:	${OBJS}
	${LIB} ${NAME} ${OBJS}

bonus: ${OBJS}
	${LIB} ${NAME} ${OBJS}

clean:
	${RM} ${OBJS}

fclean:	clean
	${RM} ${NAME}

re:	fclean all

.PHONY: all clean fclean re